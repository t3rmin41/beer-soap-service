<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:tns="http://simple.soap.com/beer"
           targetNamespace="http://simple.soap.com/beer"
           elementFormDefault="qualified">

    <xs:element name="BeerRequest">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="id" type="xs:int"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:element name="BeerResponse">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="beer" type="tns:beer"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
    <xs:complexType name="beer">
        <xs:sequence>
            <xs:element name="id" type="xs:int"/>
            <xs:element name="name" type="xs:string"/>
        </xs:sequence>
    </xs:complexType>

</xs:schema>